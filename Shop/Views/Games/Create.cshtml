@model NewGame 
@using Shop.Data.Enums;

@{ 
    ViewData["Title"] = "Create a new game";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <p >
            <h4 class="align-middle text-center" >Add a new Game</h4>
        </p>
        
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CreateDate" class="control-label"></label>
                                <input asp-for="CreateDate" type="date" class="form-control" />
                                <span asp-validation-for="CreateDate" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Price" class="control-label"></label>
                                <input asp-for="Price" type="number" class="form-control" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ImageURL" class="control-label"></label>
                                <input asp-for="ImageURL" class="form-control" />
                                <span asp-validation-for="ImageURL" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="ProducersId" class="control-label"></label>
                                <select asp-for="ProducersId" class="form-control" asp-items="ViewBag.Producers"></select>
                                <span asp-validation-for="ProducersId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="GameCategory" class="control-label"></label>
                                <select asp-for="GameCategory" class="form-control" asp-items="Html.GetEnumSelectList<GameCategory>()"></select>
                                <span asp-validation-for="GameCategory" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="AuthorsId" class="control-label"></label>
                                <select asp-for="AuthorsId" class="form-control" asp-items="ViewBag.Authors"></select>
                                <span asp-validation-for="AuthorsId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="GameShopsId" class="control-label"></label>
                                <select asp-for="GameShopsId" class="form-control" asp-items="ViewBag.GameShops"></select>
                                <span asp-validation-for="GameShopsId" class="text-danger"></span>
                            </div>
                        </div>

                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="Descritpion" class="control-label"></label>
                                    <textarea asp-for="Descritpion" class="form-control"></textarea>
                                    <span asp-validation-for="Descritpion" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                    <div class="col-md-4 offset-4 text-center">
                        <img width="100%" id="ImageUrlPreview" />
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show all</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>

@section Scripts{ 
    <script>
        $("#ImageURL").on("change", function () {
            var output = document.getElementById("ImageUrlPreview");
            output.src = $(this).val();
        })
    </script>
}