@model IEnumerable<Game>

@{
    ViewData["Title"] = "List of Games";
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-6 col-xs-6 border-primary mb-3 justify-content-center">
            <div class="card mb-3">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info" style="background-color: darkblue !important; border-bottom-right-radius: 10px; border-bottom-left-radius: 10px; ">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @item.FullName
                                        <a class="text-white float-right" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
                                        <a class="text-white float-right" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i></a> 
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <img src="@item.ImageURL" width="100%" height="400px" alt="@item.FullName">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <p class="card-text">
                            </p>
                            <p class="card-text">
                                <b style="border: 1px solid; background: lightslategrey; padding: 5px; color: #fff; border-radius: 5px; margin-right: 10px;">Producer: </b>
                                <a asp-controller="Producers" asp-action="Details" asp-route-id="@item.ProducersId">
                                    @item.FullName
                                </a>
                            </p>
                            <p class="card-text">
                                <b style="border: 1px solid; background: lightslategrey; padding: 5px; color: #fff; border-radius: 5px; margin-right: 10px;">Author: </b>
                                <a asp-controller="Authors" asp-action="Details" asp-route-id="@item.AuthorsId">
                                    @item.FullName
                                </a>
                            </p>
                            <p class="card-text"><b style="border: 1px solid; background: lightslategrey; padding: 5px; color: #fff; border-radius: 5px; margin-right: 10px;">Category: </b>@item.GameCategory</p>
                            <p class="card-text"><b style="border: 1px solid; background: lightslategrey; padding: 5px; color: #fff; border-radius: 5px; margin-right: 10px;">Game shop: </b>@item.GameShops.Name</p>
                            <p class="card-text"><b style="border: 1px solid; background: lightslategrey; padding: 5px; color: #fff; border-radius: 5px; margin-right: 10px;">Premiere Date: </b>@item.CreateDate.ToString("dd MMM yyyy")</p>
                            <p class="card-text"><b style="border: 1px solid; background: lightslategrey; padding: 5px; color: #fff; border-radius: 5px; margin-right: 10px;">Description: </b>@item.Descritpion</p>

                            <a class="btn btn-outline-primary float-left" asp-action="Details" asp-route-id="@item.Id">
                                <i class="bi bi-eye-fill"></i> Show Details
                            </a>
                            <a style="background-color: green; border-color: green;" class="btn btn-success text-white" asp-controller="Orders" asp-action="AddToShoppingCart" asp-route-id="@item.Id">
                                <i class="bi bi-cart-plus"></i> Add to Cart (Price @item.Price.ToString("c"))
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@await Html.PartialAsync("_CreateItem", "Games")
