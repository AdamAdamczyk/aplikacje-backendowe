@model Game

@{
    ViewData["Title"] = "Game delete";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1 class="align-middle text-center" >Delete confirmation for @Model.FullName</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="form-group text-center">
                    <img style="max-width:150px;" src="@Model.ImageURL" />
                </div>
   
                <div class="form-group">
                    <label asp-for="FullName" class="control-label"></label>
                    <input asp-for="FullName" class="form-control" readonly />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Descritpion" class="control-label"></label>
                    <input asp-for="Descritpion" class="form-control" readonly />
                    <span asp-validation-for="Descritpion" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <form asp-action="DeleteConfirmed">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Confirm" class="btn btn-danger float-right" />
                    </form>
                    <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                </div>
            </div>
        </div>
    </div>
</div>